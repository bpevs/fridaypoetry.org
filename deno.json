{
  "compilerOptions": {
    "lib": ["esnext", "dom", "deno.ns"],
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
  },
  "fmt": {
    "include": ["source/"],
    "exclude": ["source/public/"],
  },
  "importMap": "import_map.json",
  "tasks": {
    "serve": "deno run -A --unstable --watch source/main.tsx",
    "test": "deno fmt && deno lint --unstable && deno check --unstable source/main.tsx && deno test --unstable"
  }
}
