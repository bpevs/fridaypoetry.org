{
  "compilerOptions": {
    "lib": ["esnext", "dom", "deno.ns"],
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
  },
  "fmt": {
    "files": {
      "include": ["source/"],
      "exclude": ["source/public/"],
    }
  },
  "importMap": "import_map.json",
  "tasks": {
    "serve": "deno run --no-check --allow-net --allow-read --allow-env --watch source/main.tsx",
    "test": "deno fmt && deno lint && deno check source/main.tsx && deno test"
  }
}
