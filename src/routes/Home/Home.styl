.home
  max-width: 800px
  padding-left: 5%
  padding-right: 5%
  width: 100%

.left
  position: fixed
  top: 40%
  left: 5%

.right
  position: fixed
  top: 40%
  right: 5%

.home .poem
  height: 100%
  width: 100%
  left: 0
  top: 0
  position: absolute
  margin: auto
  z-index: 1

.home .poem .content
  position: absolute
  top: 45%
  left: 50%
  transform: translateY(-50%) translateX(-50%)
  max-height: 60%
  max-width: 95%