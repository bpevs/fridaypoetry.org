{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "react",
    "jsxFactory": "h",
    "outDir": "./dist/",
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "skipLibCheck": true,
    "lib": [ "es5", "es2015", "dom", "scripthost" ],
    "paths": {
      "lodash": ["node_modules/lodash-es"],
      "preact": ["node_modules/preact/dist/preact"],
      "@zuck/core": ["node_modules/@zuck/core/dist/index"]
    }
  },
  "include": [
    "./source/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "files": [
    "./node_modules/preact/dist/preact"
  ]
}
