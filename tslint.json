{
  "extends": "tslint:recommended",
  "rules": {
    "arrow-parens": false,
    "curly": false,
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": [
      "warning",
      {
        "allow": [
          "debug",
          "info",
          "log",
          "time",
          "timeEnd",
          "trace"
        ]
      }
    ],
    "no-var-requires": false,
    "trailing-comma": false
  }
}